generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Article {
  id          String              @id @default(uuid())
  title       String
  description String
  price       Float
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt
  // Intéressant de changer le isPublished en status pour gérer plusieurs états
  // status      articleStatusEnum   @default(PUBLISHED)
  isPublished Boolean             @default(false)
  user        String              @map("userId")
  images      ArticleImages[]
  categories  ArticleCategories[]

  @@map("articles")
}

model ArticleCategories {
  id         String @id @default(uuid())
  articleId  String
  categoryId String

  article Article @relation(fields: [articleId], references: [id])

  @@map("article_categories")
}

model ArticleImages {
  id        String @id @default(uuid())
  articleId String
  imageUrl  String

  article Article @relation(fields: [articleId], references: [id])

  @@map("article_images")
}

model category {
  id   String @id @default(uuid())
  name String @unique

  @@map("categories")
}
